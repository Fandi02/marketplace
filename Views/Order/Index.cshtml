@using System.Globalization
@model List<marketplace.ViewModels.OrderViewModel>
@{
    ViewData["Title"] = "Pesanan";
    Layout = "_AdminLayout";
    int i = 0;
}
  
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">List Order</h4>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col">No</th>
                            <th scope="col">Tgl Transaksi</th>
                            <th scope="col">Status</th>
                            <th scope="col">Total bayar</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                i++;
                                <tr>
                                    <td>@i</td>
                                    <td>@item.TglOrder.ToLongDateString() @item.TglOrder.ToLongTimeString()</td>
                                    <td>@item.Status</td>
                                    <td>@item.TotalBayar.ToString("C", new CultureInfo("id-ID"))</td>
                                    <td><a href="/Order/Detail/@item.IdOrder">Detail</a></td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4">Data kosong</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>