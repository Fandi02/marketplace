@model IEnumerable<marketplace.ViewModels.AdminViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "_AdminLayout";
    int i = 0;
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">List Admin</h4>
            <p class="card-description">
                <a asp-action="Create">Tambah Admin</a>
            </p>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>No</th>
                            <th>Email</th>
                            <th>Nama</th>
                            <th>Nomer Handphone</th>
                            <th>Username</th>
                            <th>Password</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                i++;
                                <tr>
                                    <td>@i</td>
                                    <td>@item.Email</td>
                                    <td>@item.Nama</td>
                                    <td>@item.NoHp</td>
                                    <td>@item.Username</td>
                                    <td>@item.Password</td>
                                    <td></td>
                                    <td>
                                        <i class="mdi mdi-pencil"></i>
                                        <a href="/Admin/edit/@item.IdAdmin">Edit</a><br><br>
                                        <i class="mdi mdi-delete"></i>
                                        <a href="/Admin/delete/@item.IdAdmin">Hapus</a><br><br>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4">Data kosong</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
