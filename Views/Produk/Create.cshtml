@model marketplace.ViewModels.ProdukViewModel;

@{
    ViewData["Title"] = "Tambah Produk";
    Layout = "_AdminLayout";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Buat Produk Baru</h4>
            <p class="card-description">
                Masukkan informasi produk dalam form berikut
            </p>
            <form class="forms-sample" asp-action="Create" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Nama" for="exampleInput1"></label>
                    <input class="form-control" id="exampleInput1" placeholder="Name" asp-for="Nama">
                    <span asp-validation-for="Nama" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Deskripsi" for="exampleInput2"></label>
                    <input class="form-control" id="exampleInput2" placeholder="Deskripsi Produk" asp-for="Deskripsi">
                    <span asp-validation-for="Deskripsi" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Harga" for="exampleInput3"></label>
                    <input class="form-control" id="exampleInput3" placeholder="Harga Produk" asp-for="Harga">
                    <span asp-validation-for="Harga" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Stok" for="exampleInput4"></label>
                    <input class="form-control" id="exampleInput4" placeholder="Stok Produk" asp-for="Stok">
                    <span asp-validation-for="Stok" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Deskripsi" for="exampleInput5"></label>
                    <input class="form-control" id="exampleInput5" placeholder="Deskripsi Produk" asp-for="Deskripsi">
                </div>
                <div class="form-group">
                    <label asp-for="GambarFile" class="control-label"></label>
                    <input asp-for="GambarFile" type="file" class="form-control" />
                    <span asp-validation-for="GambarFile" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="form-group">
                        <label asp-for="KategoriId" class="control-label"></label>
                        @Html.DropDownList("KategoriId",
                        (List<SelectListItem>)ViewBag.KategoriDataSource,
                        "",
                        new {
                        @multiple = "multiple",
                        @class = "form-select"
                        })
                        <span asp-validation-for="KategoriId" class="text-danger"></span>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary me-2">Submit</button>
            </form>
            <a asp-action="Index" class="btn btn-light">Cancel</a>
        </div>
    </div>
</div>
@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}