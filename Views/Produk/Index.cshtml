@model IEnumerable<marketplace.ViewModels.ProdukViewModel>
@{
    ViewData["Title"] = "Daftar Produk";
    int i = 0;
    Layout = "_AdminLayout";
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">List Produk</h4>
            <p class="card-description">
                <a asp-action="Create">Tambah Produk</a>
            </p>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                No
                            </th>
                            <th>
                                Gambar Produk
                            </th>
                            <th>
                                Nama
                            </th>
                            <th>
                                Deskripsi
                            </th>
                            <th>
                                Harga
                            </th>
                            <th>
                                Stok
                            </th>
                            <th>
                                Kategori
                            </th>
                            <th>
                                Action
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                i++;
                                <tr>
                                    <td>@i</td>
                                    <td><img src="~/@item.GambarSrc" height="100" /></td>
                                    <td>@item.Nama</td>
                                    <td>@item.Deskripsi</td>
                                    <td>@item.Harga</td>
                                    <td>@item.Stok</td>
                                    <td>
                                        @foreach (var kategori in item.Kategories)
                                        {
                                            <img src="@kategori.Icon" height="32" />
                                            <p>@kategori.Nama</p>
                                        }
                                    </td>
                                    <td>
                                        <i class="mdi mdi-pencil"></i>
                                        <a href="/produk/edit/@item.IdProduk">Edit</a><br><br>
                                        <i class="mdi mdi-delete"></i>
                                        <a href="/produk/delete/@item.IdProduk">Hapus</a><br><br>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4">Data kosong</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
