@model IEnumerable<marketplace.ViewModels.ProdukViewModel>
@{
    ViewData["Title"] = "Daftar Produk";
    int i = 0;
    Layout = "_AdminLayout";
}

<table class="table">
    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <thead>
        <th>No</th>
        <th>Gambar</th>
        <th>Nama</th>
        <th>Deskripsi</th>
        <th>Harga</th>
        <th>Stok</th>
        <th>Kategori</th>
        <th>Action</th>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                i++;
                <tr>
                    <td>@i</td>
                    <td><img src="~/@item.GambarSrc" height="100" /></td>
                    <td>@item.Nama</td>
                    <td>@item.Deskripsi</td>
                    <td>@item.Harga</td>
                    <td>@item.Stok</td>
                    <td>
                        @foreach (var kategori in item.Kategories)
                        {
                            <img src="@kategori.Icon" height="32" />
                            <p>@kategori.Nama</p>
                        }
                    </td>
                    <td>
                        <a href="Produk/edit/@item.IdProduk">Edit</a>
                        <a href="Produk/detail/@item.IdProduk">Detail</a>
                        <a href="Produk/delete/@item.IdProduk">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4">Data kosong</td>
            </tr>
        }
    </tbody>
</table>