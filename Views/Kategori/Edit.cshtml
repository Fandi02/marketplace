@model marketplace.ViewModels.KategoriViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "_AdminLayout";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Edit Kategori</h4>
            <p class="card-description">
                Edit informasi kategori dalam form berikut
            </p>
            <form asp-action="Edit" method="post">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input asp-for="Id" type="hidden" class="form-control">
                <div class="form-group">
                    <label asp-for="Nama" for="exampleInput1"></label>
                    <input class="form-control" id="exampleInput1" placeholder="Name" asp-for="Nama">
                    <span asp-validation-for="Nama" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Deskripsi" for="exampleInput2"></label>
                    <input class="form-control" id="exampleInput2" placeholder="Deskripsi" asp-for="Deskripsi">
                    <span asp-validation-for="Deskripsi" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Icon" class="control-label"></label>
                    <input asp-for="Icon" type="file" class="form-control" />
                    <span asp-validation-for="Icon" class="text-danger"></span>
                </div>
                @* <div class="form-grup">
                    <img src="~/@Model.IconSrc" height="100px" />
                </div> *@
                <button type="submit" class="btn btn-primary me-2">Edit</button>
            </form>
            <a asp-action="Index" class="btn btn-light">Cancel</a>
        </div>
    </div>
</div>
@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

